<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Konversi Suhu"
        android:textSize="24sp"
        android:textColor="#3E4A89"
        android:fontFamily="sans-serif-medium"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/tvSubtitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TB1 - Mobile Programming"
        android:textSize="18sp"
        android:textColor="#3E4A89"
        android:fontFamily="sans-serif"
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvSubtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Irfan Setiawan Dawolo (41522120007)"
        android:textSize="18sp"
        android:textColor="#3E4A89"
        android:fontFamily="sans-serif"
        android:layout_below="@id/tvSubtitle1"
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/etInputTemperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Suhu"
        android:inputType="numberDecimal"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="sans-serif"
        android:textColor="#3E4A89"
        android:layout_below="@id/tvSubtitle2"
        android:layout_marginTop="16dp" />

    <Spinner
        android:id="@+id/spinnerTemperatureUnit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:background="@drawable/rounded_spinner"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_below="@id/etInputTemperature"
        android:layout_marginTop="16dp"
        android:popupBackground="@drawable/spinner_background" />

    <Button
        android:id="@+id/btnConvert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Konversi"
        android:background="@drawable/rounded_button"
        android:textColor="#FFFFFF"
        android:layout_below="@id/spinnerTemperatureUnit"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#3E4A89"
        android:fontFamily="sans-serif"
        android:layout_below="@id/btnConvert"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:background="@drawable/rounded_clear_button"
        android:textColor="#FFFFFF"
        android:layout_below="@id/tvResult"
        android:layout_marginTop="16dp" />

</RelativeLayout>
